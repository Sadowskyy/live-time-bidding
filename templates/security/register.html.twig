{% extends 'base.html.twig' %}
{% block body %}
    <div>
        <h1 class="h3 mb-3 font-weight-normal">Zarejestruj się</h1>
        <p style="margin-top: 15px">Wpisz hasło, którym będziesz się posługiwał oraz login, który rownież będzie twoją nazwą użytkownika.</p>
        {{ form_start(registerForm, {'action': path('register_request')}) }}
        <label for="login">Login</label>
        {{ form_widget(registerForm.login) }}
        <label for="password">Hasło</label>
        {{ form_widget(registerForm.password) }}
        <br>
        <br>
        {{ form_widget(registerForm.submit) }}
        {{ form_end(registerForm) }}
    </div>
{% endblock %}